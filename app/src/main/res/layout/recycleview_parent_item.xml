<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="?attr/actionBarSize"
    android:layout_marginStart="@dimen/margin_lr"
    android:layout_marginEnd="@dimen/margin_lr"
    android:layout_marginTop="@dimen/margin_lr">
    <TextView
        android:id="@+id/textViewSetTheme"
        style="@style/text_h2_style"
        android:layout_height="@dimen/about_parent_height"
        android:layout_marginStart="16dp"
        android:text="更新日志"
        android:textColor="?attr/colorPrimary"/>
        <ImageView
            android:id="@+id/imageView7"
            android:layout_width="@dimen/about_parent_height"
            android:layout_height="@dimen/about_parent_height"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:srcCompat="@drawable/arrow_down_24"
            android:layout_alignParentEnd="true"/>
    <View
        android:id="@+id/parent_dashed_view"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_marginStart="48dp"
        android:layerType="software"
        android:background="@drawable/dashed_style_view"
        android:layout_alignParentBottom="true"/>
</RelativeLayout>