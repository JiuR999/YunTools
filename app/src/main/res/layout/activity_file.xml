<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".activity.FileActivity">
    <WebView
        android:id="@+id/web_find_file_different"
        android:layout_width="match_parent"
        android:layout_height="480dp"
        android:visibility="gone"/>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="找不同"
        android:fontFamily="@font/mxj"
        android:textColor="?attr/colorPrimary"
        android:layout_marginStart="@dimen/margin_lr"
        android:layout_marginTop="@dimen/toolbar_height"
        android:layout_centerHorizontal="true"
        android:textSize="48sp"/>
    <com.google.android.material.card.MaterialCardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"

        android:layout_marginStart="@dimen/margin_lr"
        android:layout_marginEnd="@dimen/margin_lr"
        android:layout_centerVertical="true"
        app:cardElevation="@dimen/margin_item"
        app:strokeWidth="1dp">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="@dimen/margin_lr"
            android:orientation="vertical">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/radius_stroke">
                <TextView
                    android:id="@+id/tv_filename1"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:layout_marginStart="@dimen/margin_item"
                    android:layout_marginEnd="@dimen/margin_item"/>
                <com.google.android.material.button.MaterialButton
                    android:id="@+id/btn_select_file1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="选择文件"
                    android:layout_marginEnd="@dimen/margin_lr"/>
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/margin_item"
                android:background="@drawable/radius_stroke">
                <TextView
                    android:id="@+id/tv_filename2"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:layout_marginStart="@dimen/margin_item"
                    android:layout_marginEnd="@dimen/margin_item"/>
                <com.google.android.material.button.MaterialButton
                    android:id="@+id/btn_select_file2"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="选择文件"
                    android:layout_marginEnd="@dimen/margin_lr"/>
            </LinearLayout>
            <com.google.android.material.button.MaterialButton
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/submit"
                app:icon="@drawable/twotone_send_24"
                app:iconTintMode="multiply"
                android:text="@string/enter"
                android:layout_gravity="end"
                android:layout_marginEnd="@dimen/margin_lr"
                android:layout_marginTop="@dimen/margin_lr"/>
        </LinearLayout>
    </com.google.android.material.card.MaterialCardView>

</RelativeLayout>