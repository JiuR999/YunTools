<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".fragment.AnalyVedioFragment"
    >
    <androidx.core.widget.NestedScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="短视频解析"
                android:fontFamily="@font/mxj"
                android:layout_marginStart="@dimen/margin_lr"
                android:visibility="gone"
                android:textColor="?attr/colorPrimary"
                android:layout_centerHorizontal="true"
                android:textSize="48sp"/>
            <RelativeLayout
                android:id="@+id/relay_search_tool"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="100dp"
                android:layout_marginStart="18dp"
                android:layout_marginEnd="18dp"
                android:padding="10dp">
                <com.google.android.material.textfield.TextInputLayout

                    android:layout_width="330dp"
                    android:layout_height="wrap_content"
                    android:layout_centerInParent="true"
                    android:hint="请输入视频分享链接"
                    app:endIconMode="clear_text"
                    app:endIconTint="?attr/colorPrimary"
                    app:startIconDrawable="@drawable/tiktok"
                    app:startIconTint="?attr/colorPrimary"
                    app:boxCornerRadiusTopStart="30dp"
                    app:boxCornerRadiusTopEnd="30dp"
                    app:boxCornerRadiusBottomStart="30dp"
                    app:boxCornerRadiusBottomEnd="30dp"
                    android:id="@+id/text_input"
                    android:orientation="horizontal">

                    <com.google.android.material.textfield.TextInputEditText
                        android:id="@+id/edit_link"
                        style="@style/text_h2_style"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_vertical"
                        android:textColor="?attr/colorPrimary" />
                </com.google.android.material.textfield.TextInputLayout>
                <androidx.constraintlayout.widget.ConstraintLayout
                    android:layout_width="48dp"
                    android:layout_height="48dp"
                    android:layout_below="@id/text_input"
                    android:layout_centerHorizontal="true"
                    android:layout_marginTop="@dimen/toolbar_height"
                    android:background="@drawable/background_oval_1"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent">
                    <ImageView
                        android:id="@+id/img_music_search"
                        android:layout_width="32dp"
                        android:layout_height="32dp"
                        android:layout_centerHorizontal="true"
                        app:layout_constraintBottom_toBottomOf="parent"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toTopOf="parent"
                        app:srcCompat="@drawable/twotone_search_24" />
                </androidx.constraintlayout.widget.ConstraintLayout>
            </RelativeLayout>

            <ProgressBar
                android:layout_width="320dp"
                android:layout_height="16dp"
                android:layout_marginTop="@dimen/margin_lr"
                android:layout_below="@id/relay_search_tool"
                android:layout_centerHorizontal="true"
                android:id="@+id/progress_down"
                android:progressDrawable="@drawable/custom_progress"
                style="@style/Widget.AppCompat.ProgressBar.Horizontal"
                android:visibility="gone"/>

            <VideoView
                android:id="@+id/video_tik"
                android:layout_width="180dp"
                android:layout_height="320dp"
                android:layout_below="@id/relay_search_tool"
                android:layout_marginTop="@dimen/toolbar_height"

                android:layout_centerHorizontal="true" />
            <ImageView
                android:layout_width="180dp"
                android:layout_height="320dp"
                android:id="@+id/cover"
                android:layout_below="@id/relay_search_tool"
                android:layout_marginTop="@dimen/toolbar_height"
                android:layout_centerHorizontal="true"
                android:background="?attr/colorSurface"/>
            <LinearLayout
                android:id="@+id/linear_tool"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/video_tik"
                android:gravity="center"
                android:layout_alignParentBottom="true"
                android:layout_centerHorizontal="true"
                android:layout_marginStart="@dimen/margin_lr"
                android:layout_marginEnd="@dimen/margin_lr"
                android:layout_marginTop="6dp"
                android:orientation="horizontal"
                android:visibility="invisible">
                <Button
                    android:id="@+id/btn_copy"
                    android:layout_width="64dp"
                    android:layout_height="64dp"
                    android:textSize="16sp"
                    android:textStyle="bold"
                    android:textColor="?attr/colorPrimary"
                    android:drawableTop="@drawable/twotone_send_24"
                    android:layout_marginEnd="@dimen/margin_lr"
                    android:background="@android:color/transparent" />
                <Button
                    android:id="@+id/img_save"
                    android:layout_width="64dp"
                    android:layout_height="64dp"
                    android:layout_marginStart="@dimen/margin_lr"
                    android:layout_marginTop="@dimen/margin_item"
                    android:drawableTop="@drawable/twotone_download_24"
                    android:textSize="16sp"
                    android:textStyle="bold"
                    android:textColor="?attr/colorPrimary"
                    android:layout_marginBottom="8dp"
                    android:background="@android:color/transparent" />
            </LinearLayout>
        </RelativeLayout>
    </androidx.core.widget.NestedScrollView>

</RelativeLayout>