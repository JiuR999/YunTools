<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="6dp">
    <Spinner
        android:id="@+id/spinner_home_level"
        android:layout_width="72dp"
        android:layout_height="42dp"
        android:dropDownWidth="80dp"
        android:layout_centerHorizontal="true"
        android:popupBackground="@drawable/radius"
        android:entries="@array/home_level"
        android:layout_marginTop="@dimen/margin_lr"
        android:background="@drawable/board"/>
    <ImageView
        android:id="@+id/img_home_tall"
        android:layout_width="@dimen/icon_pro"
        android:layout_height="@dimen/icon_pro"
        android:layout_alignParentEnd="true"
        android:layout_marginTop="@dimen/margin_item"/>
    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/recycleview_flist"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/spinner_home_level"
        tools:listitem="@layout/coc_formation_item"
        android:layout_marginTop="@dimen/home_btn_margin_bottom" />
    <com.google.android.material.floatingactionbutton.FloatingActionButton
        android:id="@+id/fab_add"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:shapeAppearanceOverlay="@style/roundedCornerFabStyle"
        android:layout_alignParentBottom="true"
        android:layout_alignParentEnd="true"
        android:src="@drawable/baseline_add_24"
        android:layout_marginBottom="@dimen/home_btn_margin_bottom"
        android:layout_marginEnd="@dimen/home_btn_margin_bottom" />
</RelativeLayout>